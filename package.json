{
  "name": "flor-language",
  "displayName": "Flor Language",
  "description": "VS Code extension for the Flor language",
  "version": "0.1.0",
  "publisher": "kiebor81",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiebor81/flor-language-service.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:flor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "flor",
        "aliases": ["Flor", "flor"],
        "extensions": [".flor"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "flor",
        "scopeName": "source.flor",
        "path": "./syntaxes/flor.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "flor",
        "path": "./snippets/flor.json"
      }
    ],
    "configurationDefaults": {
      "[flor]": {
        "editor.formatOnSave": true
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "typescript": "^4.1.3",
    "vscode-test": "^1.4.0"
  }
}